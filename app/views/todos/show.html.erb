<div id="container">
<div id="show_todo"><br><br>
<h2 class="todoH2">Todo</h2>	
<table>
	<tr>
		<td><label style="font-family:bold">Title:</label></td>
		<td><%= @todo.title %></td>
	</tr>
	<tr>
		<td><label style="font-family:bold">Description:</label></td>
		<td><%= @todo.description %></td>
	</tr>
	<tr>
		<td><label style="font-family:bold">Event Date:</label></td>
		<td><%= @todo.event_date.to_date.strftime("%B %d, %Y") %></td>
	</tr>
	<tr>
		<td><label style="font-family:bold">Time:</label></td>
		<td><%= @todo.start_time.strftime("%I:%M%p") %> to <%= @todo.end_time.strftime("%I:%M%p") %></td>
	</tr>
    <tr>
      <td class="v_todo"><%= link_to 'Edit', edit_todo_path %></td>
    </tr>

</table>


  

<!--<%= link_to 'Back', root_url %>-->
</div>
</div>