<div id ="container">
<div id="centerDIV"style="width:980px;height:534px;margin-left:0">
<%= form_for(@todo) do |f| %>
  <br>
  <table align="center">
    <tr>
      <td></td>
      <td><h3 style="color:A3C953">New ToDo</h3></td>
    </tr>  
    <tr>
    <td class="qtn"><%= f.label :Title %></td>
    <td><%= f.text_field :title, :required => true %></td>
    </tr>
    <tr>
    <td class="qtn"><%= f.label :Description %></td>
    <td><%= f.text_area :description, :style => "width:205px;height:50px", :required => true %></td>
    </tr>
    <tr>
    <td class="qtn"><%= f.label :Date %></td>
    <td><%= f.text_field :event_date, :id => "datepicker" %></td>
        <%= hidden_field_tag :current_date, '', :value => Date.today.strftime("%Y-%m-%d") %>
    </tr>
    <tr>
    <td class="qtn"><%= f.label :Start_Time %></td>
    <td><%= f.time_select :start_time, :style => "width:50px!important; color:#f00;"  %></td>
    </tr>
    <tr>
    <td class="qtn"><%= f.label :End_Time %></td>
    <td><%= f.time_select :end_time %></td>
    </tr>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <tr>
    <td></td> 
    <td><div class="actions">
        <%= f.submit "SAVE", :class => "postbtn",:style => "width:70px; border-radius:10px;" %>
        </div>
    </td>
  </tr>
<% end %>
</table>
</div>
</div>

<link rel="stylesheet" type="text/css" href="/assets/jquery.datepick.css">
<script type="text/javascript" src="/assets/jquery.datepick.js"></script>


<script>
    $("#datepicker").datepick();
    $("#datepicker").datepick({dateFormat: 'yyyy-mm-dd'});
</script>


<script>
    $('.new_todo').submit(function() {
        var startDate = $('#current_date').val();
        var endDate = $('#datepicker').val();
        if (startDate > endDate){
            alert("ToDo date value should be greater than today date");
            return false;
        }

    });
</script>
