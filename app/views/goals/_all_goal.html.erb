<div id="leftDIV">
  <ul style = "margin-left: -2px; margin-top: -8px;">
    <% goal_id = 1 %>
    <% unless @goals.empty? %>
        <% @goals[0..3].each do |goal| %>

            <li class="<%= goal_id %>">
              <a href="javascript:void(0)" onclick ="open_form(<%= goal_id%>)"><label><%= goal.goal_name %></label></a>
              <p><%= goal.target_date %></p>
            </li>

            <% goal_id += 1 %>
            <span id="goal_index"><%= link_to 'X', goal, method: :delete, data: { confirm: 'Are you sure?' },:title => "delete goal" %></span>
        <% end %>
    <% else %>
        <h2> No goals are added</h2>
    <% end %>
    <%= link_to 'Add New Goal', new_goal_path,:style=>"color:#51a2d5;", :onclick => " return check_goal(#{@goals.length})" %>
  </ul>
  <% if @goals.count > 3 %>
      <%= link_to "see more goals", about_profiles_path %>
  <% end %>
</div>

<script>
  function check_goal(goal)
  {

     if (goal < 3)
     {
         return true;
     }
      else
     {
         alert("You have exceeded the Number of Goals");
         return false;
     }
  }
</script>