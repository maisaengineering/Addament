<div id="all_comment_current_post">
  <%=  render :partial => 'current_comment' %>

</div>
<br/>

  <%= form_for(:comment, url: create_comment_post_path, :method => "post", :remote => true) do |f| %>

        <%= f.hidden_field :post_id, :value => @post.id %>
        <%= f.hidden_field :commenter_id, :value => current_user.id %>
        Comment<br />

        <%= f.text_area :description, :style=>"width:300px;",:rows => "3", :cols => "2" %>

      <%= f.submit  %>
  <% end %>
