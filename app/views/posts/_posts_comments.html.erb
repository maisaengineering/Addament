<div class="post_curcomment">

<% i = 1 %>
<% @posts.each do |post| %>
    <% user = User.find(post.user_id) %>
    <div class="user_posts_box">
      <% unless user.profile.avatar_file.nil? %>
          <%= image_tag url_for(:controller => "profiles", :action => "other_user_image", :id => user.profile.id ),{ :class => "thumb_image"} %>
      <% else %>
          <%=  image_tag("missing.png",height: 70,width: 70) %>
      <% end %>
      <%= post.current_post %>  <br/>
      <font style="color:51A2D5">posted</font> by <%= user.profile.first_name  %>
    </div>
    <div class="commentbutton<%= i %>" style="margin-left:100px">

      <a href="javascript:void(0)" onclick ="open_form(<%= i%>)"><%= comments_count(post.id) %> Comment</a>
      <div class="profile_text<%= i %>" style="display: none;">
        <div class="comment_form" >
          <%=  render 'comments/form', :id => post.id %>
        </div>
      </div>
    </div>
    <div><%=render post.comments%></div>

   <% i +=1 %>
<% end %>

</div>

  <br />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js">
</script>
<script>
    function open_form(e)
    {

        $('.profile_text'+ e).css('display', 'block');

    }
</script>