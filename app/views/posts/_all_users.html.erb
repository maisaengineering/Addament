<% @all_users.each do |user| %>
    <% profile = user.profile %>
    <% unless current_user.following?(user) %>
    <% if profile %>
            <li>
        <% if profile.avatar_file.nil? %>
            <%= image_tag("missing.png", :height => "50", :width => "50") %>
        <% else %>
            <%= image_tag url_for(:controller => "profiles", :action => "other_user_image", :id => profile.id ),{ :class => "medium_image"} %>
        <% end %>
        <label><%= profile.first_name %></label>
        <p><%= truncate(profile.about, :length => 10) %></p>
        <%= link_to "Add to Network", follow_from_post_post_path(user.id), :remote => true %>
      <% end  %>
    <% end  %>
    </li>
<% end  %>