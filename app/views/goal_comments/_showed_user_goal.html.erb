<%= form_for(@goal_comment, url: {controller: "goal_comments", action: "add_goalcomment" }, :remote => true) do |f| %>
    <% if @goal_comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@goal_comment.errors.count, "error") %> prohibited this goal_comment from being saved:</h2>
          <ul>
            <% @goal_comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">

      <%= f.hidden_field :goal_id, :value => id %>
    </div>
    <div class="field">

      <%= f.hidden_field :commenter_id, :value => current_user.id %>

    </div>
    <div class="field">
      <!--<%= f.label :comment_description %>-->
      <%= hidden_field_tag :profile_id,'', :value => profile_id  %>
      <%= f.text_area :comment_description, :style =>"height: 30px;margin-left: 85px;" %>
    </div>
    <div class="actions">
      <%= f.submit "Comment", :id => "save", :class => "commentsbtn", :style =>"margin-left: 85px;" %>
    </div>
<% end %>
