                %tr
                  %td
                    .activity
                      .activity_logo
                        =image_tag("icons/activity.gif")
                        .activity_text Activity
                    .mentee_activites
                      %table
                        %tr
                          %td
                            %td.activity_users
                              %table
                                -  @activities.each do |activity|
                                  - user = User.find(activity.trackable_id)
                                  %tr
                                    %td
                                      - unless user.profile.nil?
                                        - unless user.profile.image.url.nil?
                                          = image_tag(user.profile.image.url(:small),height: 25,width: 25)
                                        -else
                                          = image_tag("missing.png",height: 25,width: 25)
                                      - else
                                        = image_tag("missing.png",height: 25,width: 25)
                                      - unless user.profile.nil?
                                        =user.profile.first_name + " " + user.profile.last_name + " " + "updated"
                                      =activity.trackable_type + " "+ "information"
                                      %tr
                                        %td
                                          %table
                                            %tr
                                              %td.time_ago
                                                = time_ago_in_words(activity.created_at) + " " + "ago"
                                              %td.comment comment
                                              %td.share share
                                          %hr
                        %tr
                          %td
                            - if @activities.length > 3
                              = link_to "more", show_all_activity_path
