<%= form_for(@profile, url: about_update_profiles_path, :method => "post", :remote => true) do |f| %>
    <br/>
        <table>
          <tr>
            <td>
              <% if current_user.profile.image? %>
              <%= image_tag(current_user.profile.image.url(:thumb)) %>
              <% else %>
              <%= image_tag("missing.png",height: 70,width: 80) %>
              <% end %>
            </td>
            <td><div class="aboutbutton"><a href="javascript:void(0)">About Us</a></div></td>
            <td>
              <div class="profile_text" style="display: block; color:white;">
                <%= @profile.about %>
              </div>
              <div class="profile_text2" style="display: none;">
                <%= f.text_area :about, :rows => 2, :cols => 220 %>
              </div>
            </td>
          </tr>
        </table>
    <br/>
    <div style="display: none;">
    <%=  f.submit "update Profile", :id=> "save" %>
    </div>


<% end %>


<div class="tabbable"> <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#tab1" data-toggle="tab">past</a></li>
          <li><a href="#tab2" data-toggle="tab" id="followee" >present</a></li>
          <li><a href="#tab3" data-toggle="tab">future</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="tab1">

          <p>
            <% @past.each do |past| %>

            <% if past.end_date!=nil %>
            
             <%= past.company_name %><br>
             <%= past.title %><br>
             <%= past.start_date %><br>
             <%= past.end_date %><br>
             <%= past.project_name %>

            <% end %>
            <% end %>
            <div class="button2">
                    <%=  link_to "Add More", new_professional_path, {:class=>"btn", "data-toggle" => "modal","data-target" => "#myModal"} %>

                    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h3 id="myModalLabel">Add More Professional</h3>
                      </div>
                      <div class="modal-body">
                        <p></p>
                      </div>

                    </div>
                    </div>
           
          </p>

          </div>
          <div class="tab-pane" id="tab2">
            <p>  
              <% @past.each do |present| %>
            <% if present.end_date == nil %>
               <%= present.company_name %><br>
               <%= present.start_date %><br>
               <%= present.location %><br>
               <%= present.project_name %><br>

            <% end %>
            <% end %>
             
            </p>

          </div>
          <div class="tab-pane" id="tab3">
            <p>
               future
              </p>
          </div>
        </div>
      </div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js">
</script>
<script>
   $('.aboutbutton').click(function(){

      $('.profile_text').css('display', 'none');
      $('.profile_text2').css('display', 'block');
   });
   </script>
<script>
    $(document).ready(function(){
        if("<%= @profile.about %>")
        {

           $(".profile_text").html("<%= @profile.about %>").show();
            $(".profile_text2").hide();
        }
        else
        {
            $(".profile_text2").show();
            $(".profile_text").hide();
        }

    });
</script>

<script>
    $('#profile_about').blur(function() {
        $('#save').trigger('click');
    });
</script>

