<%= form_for(@profile, url: about_update_profiles_path, :method => "post", :remote => true) do |f| %>
    <br/>
    <table id="topDIV" style= "background-color: fff;height: 99;width:980px;margin-left:0px;">
      <tr>
        <td style="width: 92px;">

          <% unless current_user.profile.avatar_file? %>
              <%= image_tag("missing.png",width: 92) %>
          <% else %>
              <div id ="image" style="width:92px;">
                <%= image_tag url_for(:controller => "profiles", :action => "code_image") %>
              </div>


          <% end %>
        </td>
        <td style="width:100px; vertical-align: top;"><div class="aboutbutton"><a href="javascript:void(0)">About Us</a></div></td>
        <td>
          <div class="profile_text" style="display: block;align:justify;">
            <%= @profile.about %>
          </div>
          <div class="profile_text2" style="">
            <%= f.text_area :about,  :style => "width:550px;", :rows => 2, :cols => 220 %>
          </div>
        </td>
      </tr>
    </table>
    <br/>
    <div style="display: none;">
      <%=  f.submit "update Profile", :id=> "save" %>
    </div>


<% end %>


<div class="tabtable" style = "background-color:#51A2D5"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <li class="active"><a href="#tab1" data-toggle="tab">Past</a></li>
        <li><a href="#tab2" data-toggle="tab" >Present</a></li>
        <li><a href="#tab3" data-toggle="tab">Future</a></li>
      </ul>
</div>

    <div class="tab-content"  style = "background-color: white;margin-top: -20;">
          <div class="tab-pane active" id="tab1">

            <p>
              <% @past.each do |past| %>

                  <% if past.end_date!=nil %>

                      <%= past.company_name %><br>
                      <%= past.title %><br>
                      <%= past.start_date %><br>
                      <%= past.end_date %><br>
                      <%= past.project_name %>

                  <% end %>
              <% end %>
            </p>
          </div>

          <div class="tab-pane" id="tab2">
            <p>
              <% @past.each do |present| %>
                  <% if present.end_date == nil %>
                      <%= present.company_name %><br>
                      <%= present.start_date %><br>
                      <%= present.location %><br>
                      <%= present.project_name %><br>

                  <% end %>
              <% end %>

            </p>
          </div>


          <div class="tab-pane" id="tab3">
            <p>
              <%=  render :partial => 'goalcomments' %>
            </p>
          </div>
    </div>


</div>
 <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js">
        </script>

        <script>
            $('.aboutbutton').click(function(){

                $('.profile_text').css('display', 'none');
                $('.profile_text2').css('display', 'block');
            });
        </script>

        <script>
            $(document).ready(function(){
                if("<%= @profile.about %>")
                {

                    $(".profile_text").html("<%= @profile.about %>").show();
                    $(".profile_text2").hide();
                }
                else
                {
                    $(".profile_text2").show();
                    $(".profile_text").hide();
                }

            });
        </script>

        <script>
            $('#profile_about').blur(function() {

                $('#save').trigger('click');
            });
        </script>

