<% i =1 %>
<% if @goal.count >0 %>
    <% @goal.each do |goal| %>
        <% user  = User.find(goal.user_id) %>
            <% profile = user.profile %>
             <div class="goal_ppf">
            <%= profile.first_name %> <%= profile.last_name %><br>
            <div class="goal_name">
            <%= goal.goal_name %><br>
            </div>
               <% if current_user.following?(user) || current_user.followed_by?(user) %>
               <div class= "commentbutton<%= i %> "><a href="javascript:void(0)" onclick ="open_form(<%= i%>)">Comment</a></div>
               <% end %>
               <div class="comment_form<%= i %>" style="display: none;">
                <div class="comment_form">
                  <%=  render 'goal_comments/shoed_user_goal', :id => goal.id, :profile_id => profile.id %>
                </div>
               </div>

               </div>
            <div style="margin-left: 100px;">
            <%=render :partial => 'goal_comments/goal_comment', :locals => { :id => goal.id }  %>
            <% i += 1 %>
            </div>
            <br/>

    <% end %>
<% else %>
    <p>No Goals Added</p>
    <b><%= link_to  'Add New Goal', new_goal_path %><b/>
<% end %>


</script>
<script>
    function open_form(e)
    {

        $('.comment_form'+ e).css('display', 'block');

    }
</script>