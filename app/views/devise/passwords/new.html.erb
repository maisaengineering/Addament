<div class="sign_in_bg">
  <div class="sign_in_top">
    <span class="sign_in_logo"><%= image_tag("/assets/logo.png", :class => "logoRow") %></span>
    <span class="sign_in_site_desc"><h3 style="color:#51A2D5">Forgot Password</h3></span>
  </div>
  <div class="sign_in_form" style="margin-left: 212px;">
  	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
   
        <div class="control-group">
          <label class="control-label" for="inputEmail">Email</label>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true , required: true%>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit "Submit", :class => "psw_btn" %>
          </div>
        </div>
  <% end %>
  </div>
</div>



























