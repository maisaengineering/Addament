<div class="sign_in_bg">
  <div class="sign_in_top">
    <span class="sign_in_logo"><%= image_tag("/assets/logo.png", :class => "logoRow") %></span>
    <span class="sign_in_site_desc">A Professional Development Website For Professionals To Mentor Younger Professionals.</span>
  </div>
  <div class="sign_in_form">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class=> "form-horizontal"}) do |f| %>
        <div class="control-group">
          <label class="control-label" for="inputEmail">Email</label>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true , required: true%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputPassword">Password</label>
          <div class="controls">
            <%= f.password_field :password, :autocomplete => "off" , required: true%>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <label class="checkbox">
              <%= f.check_box :remember_me %> Remember me
            </label>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit 'Log in', :class => "login_btn btn" %>
            <%= link_to "Create Account", new_user_registration_path, :class => "create_account_btn btn" %>  <br>    <br />
            <%= link_to "Forgot Password", new_user_password_path, :style => "color:#209ED8" %>
          </div>
        </div>
  <% end %>
  </div>
</div>

